@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz oficial
// animacion(parametro)
//     -webkit-animation parametro
//     -moz-animation parametro
//     -o-animation parametro
//     -ms-animation parametro
//     animation parametro
    
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a 
    text-decoration none

body
    font-size 16px
    font-family: 'Varela Round', sans-serif;
    
figure
    margin 0
    
img
    vertical-align top
ul
    margin 0
    padding 0
//buttons

.action
    color white
    font-size 1.2em
    margin-right .5em
    &:last-child
        margin 0
    &.gray
        color gris_claro    
    
.actions
    background rgba(black,.3)
    bottom 0
    left 0
    position absolute
    right 0
.border-bottom
    border-bottom 1px solid gris_claro
.button-menu
    color gris_oscuro
    left .5em
    margin-top -10px
    position absolute
    top 50%
// oocss clases
.author
    color gris_claro

.center-block
    margin 0 auto
    
.center-text
    text-align center

.close-icon
    color gris_claro
    font-size 1.2em
    position absolute
    right .5em
    top .5em
    margin-right .2em
.container
    font-size 0
    padding 1.4rem
    text-align center
    
.header
    height 3.5em
    //a 
      //  display none
    .title
        font-size 1.1em
        line-height 3.5em
        margin 0
        text-align center
.input
    border 1px solid gris_claro
    border-radius 5px
    height 2.5em
    margin-right 0.2em
    padding 0 1em 0 2em

.left
    float left
.avatar
    width 38px
    height 38px
.isotipo
        width 122px
.logo
    background white
    display block
    display none
    overflow hidden
    padding 1.3em 0
.username
    color gris_claro
    margin-left 0.5em
    position relative
    top 9px
    &:after
        border-left 7px solid transparent
        border-right 7px solid transparent
        border-top 9px solid gris_claro
        content ""
        display inline-block
        margin-left .4em
.menu
    display none
.name
    color gris_oscuro
    
.padding
    padding 1em
    
.padding-tb
    margin 1em 0

.playing
    &.small
        width 20em
        margin 0 auto
.playlist
    display none        
.playlist
    border-left 1px solid gris_claro
    display block
    display none
    padding 0 2em
    width 22em
    .list
        list-style none
        .item
            padding 1em 0
        .action
            font-size 0.8em
.progress
    margin 1em 0
    position relative
    .min
    .max
        font-size .8em
        position absolute
        top -5px
    .min
        left 0
    .max
        right 0
    .total
        background gris_claro
        border-radius 5px
        height 5px
        margin 0 auto
        width 75%
    .state
        background rojo
        border-radius 5px
        height 5px
        position relative
        width 30%
        animation 10s state infinite linear
    .circle
        background gris_oscuro
        border-radius 50%
        height 10 px
        position absolute
        right 0
        top -2px
        width 10px
        animation 1s circle infinite

.relative
    position relative
.right
    float right
.right-text
    text-align right    

.round
    border-radius 50%
    overflow hidden
    
.search-icon
    position absolute
    left .5em
    top .8em
    color gris_claro
.song
    display inline-block
    font-size 1rem
    margin-right 1rem
    margin-bottom 1rem
    text-align left
    width 8rem
    &:nth-child(even)
        margin-right 0
    p
        margin 0.5em 0
        
.user
    width 15%
.wrap
    width 1000px
    
@keyframes state
    0%
        width 0
    100%
        width 100%
@keyframes circle
    0%
        transform scale(1)
    100%
        transform scale(2)
        opacity 0
@media screen and (min-width:480px)
    .image
        img
            width 100%
            height auto

    .playing
        &.medium
            width auto
        width auto
    .song
        &:nth-child(even)
            margin-right 1em    
@media screen and (min-width:1000px)
    body
        background gris_mas_claro
    .button-menu 
       display none
    .header
       height auto
       border none
       .title
           display none
    .menu
        display block
        background gris_mas_claro
        overflow hidden
        border-top 1px solid gris_claro
        .item
            float left
            list-style none
            a
                color gris_oscuro
                cursor pointer
                display block
                padding 1em
                text-transform uppercase
                border-top 5px solid transparent
                &:hover
                    border-top 5px solid gris_claro
    .music
        width 32.5em
        float left
        .description
            display none
    .playing
        padding-top 1.3em
        &.large
            margin 0 auto
            width 62em
            overflow hidden
    .logo
    .playlist
        display block
    
    
    